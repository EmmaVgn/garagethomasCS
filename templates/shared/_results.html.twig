{% extends 'base.html.twig' %}

{% block body %}
	<div class="container mt-5">
		<h1 class="mb-4">Résultats de la recherche</h1>

		{{ form_start(searchForm, {'attr': {'class': 'mb-4'}}) }}
		{{ form_widget(searchForm) }}
		<button class="btn btn-outline-success" type="submit">Rechercher</button>
		{{ form_end(searchForm) }}

		{% if vehicles is empty %}
			<div class="alert alert-warning mt-4">Aucun véhicule trouvé.</div>
		{% else %}
			<div class="mt-4">
				<ul class="list-group">
					{% for vehicle in vehicles %}
						<li class="list-group-item">
							{{ vehicle.type }}
							{{ vehicle.model }}
							-
							{{ vehicle.price }}
							€
						</li>
					{% endfor %}
				</ul>
				{# Paginage #}
				{{ knp_pagination_render(vehicles) }}
			</div>
		{% endif %}
	</div>
{% endblock %}
