{% extends "base.html.twig" %}

{% block title %}
	Votre avis
{% endblock %}

{% block body %}

	<h1 class="text-center">DONNER VOTRE AVIS</h1>

	<div class="row mt-5 d-flex align-items-center flex-column">
		<h4 class="text-center">Votre avis est tr√®s important pour nous !</h4>
		<div class="col-md-6">
			{{ form_start(form) }}
			{{ form_errors(form) }}
			{{ form_row(form.fullname) }}

			<div class="form-group mb-3">
				{{ form_label(form.content) }}
				<div
					class="form-control" style="height: 200px;">
					<!-- Augmentez la hauteur selon vos besoins -->
					{{ form_widget(form.content) }}
				</div>
				{{ form_errors(form.content) }}
			</div>

			<div class="star-rating mb-3">
				<span>Notre sur 5 :</span>
				{% for i in 1..5 %}
					<i class="far fa-star" data-rating="{{ i }}"></i>
				{% endfor %}
			</div>

			{{ form_row(form.rating) }}
			<button type="submit" class="btn">Envoyez</button>
			{{ form_end(form) }}
		</div>
	</div>

{% endblock %}
