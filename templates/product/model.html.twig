{% extends 'base.html.twig' %}
{% block title %}
	Marque :
	{{ model.name }}
{% endblock %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{ path('homepage') }}">Accueil</a>
		</li>
		<li class="breadcrumb-item active">{{ model.name }}</li>
	</ol>

	<h1>Marque:
		{{ model.name }}</h1>
	<div class="row">
		{% for p in products %}
			<div class="col-lg-4 col-md-4">
				{% include "_partials/_product_card.html.twig" with {'p': p} %}
			</div>
		{% endfor %}
	</div>
{% endblock %}
